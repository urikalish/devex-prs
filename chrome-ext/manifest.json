{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "PullPatrol",
  "short_name": "PullPatrol",
  "description": "PullPatrol",
  "icons": {
    "512": "img/pr.png"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "action": {
    "default_title": "PullPatrol",
    "default_icon": "img/pr.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "img/pr.png",
        "img/loading.svg"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
